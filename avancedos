    for filas in range(1):
        lista=[]
        for columnas in range(7):
            dato=input(f"registro {nu}, dato {cont}: ")
            lista.append(dato)
            cont+=1
            if cont <=7:
                cont+=0
            else:
                cont=1
    
                
        reporteReservas.append(lista)
   
        
       
    

